<div>
    <div class="container profile-cover">
        <div class="img-list-cover">
            <div>
                @if (Model.ImgUrl == null)
                {
                    <img style="border-radius: 50%;" width="150px" src="~/img/default.jpg" />
                }
                else
                {
                    <img style="border-radius: 50%;" width="200px" src="~/img/@Model.ImgUrl" />
                }
            </div>
            <br>
            <p>@Model.FirstName</p>
            <div class="list-cover">
                
                    <li class=" list-group-item"><a href="/auth/editprofile">Profil</a></li>
                    <li class="active list-group-item"><a href="/auth/editphoto">Fotoğraf</a></li>
                    <li class=" list-group-item"><a href="/auth/editaccount">Hesap</a></li>
                
            </div>
        </div>
        <div class="edit-profile-info-cover">
            <div class="edit-profile-info">
                <div>
                    <h2>Fotoğraf Güncelle</h2>
                    <form class="input-group mt-5"  method="post" enctype="multipart/form-data">
                        <div class="form-group row">

                            <div class="col-sm-10">


                                <input class="form-control" type="file" name="file">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10 offset-sm-2">
                                <input class="default-hover" type="submit" class="btn btn-primary" value="Güncelle">
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
