@model EditProfileModel



<div>
    <div class="container profile-cover">
        <div class="img-list-cover">
           <div>
                @if (Model.ImgUrl == null)
                {
                    <img style="border-radius: 50%;" width="150px" src="~/img/default.jpg" />
                }
                else
                {
                    <img style="border-radius: 50%;" width="200px" src="~/img/@Model.ImgUrl" />
                }
           </div>
           <br>
           <p>@Model.FirstName</p>
           <div class="list-cover">
              
                <li class="active list-group-item"><a href="/auth/editprofile">Profil</a></li>
                <li  class=" list-group-item"><a href="/auth/editphoto">Fotoğraf</a></li>
                <li  class=" list-group-item"><a href="/auth/editaccount">Hesap</a></li>
          
           </div>
        </div>
        <div class="edit-profile-info-cover">
            <div class="edit-profile-info">
                <div>
                    <h2>Profil Düzenle</h2>
                    <form  asp-controller="Auth" asp-action="EditProfile" method="POST">

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="input-group mb-2 mt-1">
                            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="Email" disabled>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-group mb-2 mt-1">
                            <label asp-for="NickName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="NickName" disabled>
                                <span asp-validation-for="NickName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-group mb-2 mt-1">
                            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="FirstName">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-group mb-2 mt-1">
                            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="LastName">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="input-group mb-2 mt-1">
                            <div class="col-sm-10 offset-sm-2">
                                <input type="submit" class="default-hover w-100" value="Güncelle">

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>








@section Scripts
{
<script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

}
