@model RegisterModel

<div class="container form">
    <div class="mb-4 mt-3" style="text-align: center;">
        <h1><i class="fas fa-user-plus"></i>Kayıt Ol</h1>
    </div>

    <form asp-controller="Auth" asp-action="Register" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="container ">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mt-1">
                <input class="textbox-green form-control" asp-for="FirstName" placeholder="İsim giriniz">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="container ">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mt-1">
                <input class="textbox-green form-control" asp-for="LastName" placeholder="Soyisim giriniz">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="container">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mt-1">
                <input class="textbox-green form-control" asp-for="Password" placeholder="Şifre giriniz">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="container">
            <label asp-for="RePassword" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mt-1">
                <input class="textbox-green form-control" asp-for="RePassword" placeholder="Şifre onay giriniz">
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mt-1">
                <input class="textbox-green form-control" asp-for="Email" placeholder="Email giriniz">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mt-1">
                <input class="textbox-green form-control" asp-for="UserName" placeholder="Kullanıcı adı giriniz">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">

            <button type="submit" class="default-hover w-100">Register</button>

        </div>
    </form>
    <p class="container my-1 mt-3">Zaten bir hesabınız var mı? <a href="/auth/login"> Oturum Aç </a></p>

</div>

@section Scripts
{
<script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

}
